{
	"name": "sync-index",
	"version": "1.0.4",
	"main": "index.js",
	"type": "module",
	"license": "MIT",
	"prettier": "@leonzalion/configs/prettier",
	"lionp": {
		"tests": false
	},
	"bin": {
		"sync-index": "sync-index.js"
	},
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"scripts": {
		"release": "lionp",
		"build": "node --loader ts-node/esm ./scripts/build.ts",
		"prepare": "simple-git-hooks",
		"start": "node --loader ts-node/esm ./src/sync-index.ts",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "latest",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"lionp": "^1.0.9",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.4"
	},
	"simple-git-hooks": {
		"pre-commit": "node --loader ts-node/esm ./scripts/hooks/pre-commit.ts",
		"pre-push": "node --loader ts-node/esm ./scripts/hooks/pre-push.ts"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"chokidar": "^3.5.2",
		"commander": "^8.3.0",
		"cosmiconfig": "^7.0.1",
		"globby": "^12.0.2",
		"pkg-dir": "^6.0.1"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
