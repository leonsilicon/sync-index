{
	"name": "sync-index",
	"version": "1.0.12",
	"main": "index.js",
	"type": "module",
	"license": "MIT",
	"prettier": "@leonzalion/configs/prettier.cjs",
	"repository": {
		"type": "git",
		"url": "https://github.com/leonzalion/sync-index.git"
	},
	"homepage": "https://github.com/leonzalion/sync-index#readme",
	"bin": {
		"sync-index": "sync-index.js"
	},
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint.cjs"
		]
	},
	"scripts": {
		"release": "lionp",
		"build": "node-ts ./scripts/build.ts",
		"prepare": "simple-git-hooks",
		"start": "node-ts ./src/sync-index.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@leonzalion/configs": "^1.1.1",
		"@types/debug": "^4.1.7",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"eslint": "^8.10.0",
		"execa": "^6.1.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"lionp": "^1.0.19",
		"outdent": "^0.8.0",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.3",
		"ts-jest-resolver": "^2.0.0",
		"ts-node": "^10.5.0",
		"tsc-alias": "^1.6.3",
		"tsconfig-paths": "^3.12.0",
		"tsm": "^2.2.1",
		"typescript": "^4.5.5"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"chokidar": "^3.5.3",
		"commander": "^9.0.0",
		"cosmiconfig": "^7.0.1",
		"debug": "^4.3.3",
		"globby": "^13.1.1",
		"just-debounce": "^1.1.0",
		"p-throttle": "^5.0.0",
		"pkg-dir": "^6.0.1"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
